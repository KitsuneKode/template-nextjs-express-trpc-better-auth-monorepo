{
  "name": "@template/server",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "check-types": "tsc -noEmit",
    "build": "bun build ./src/server.ts --outdir ./dist --target bun --minify --sourcemap",
    "build:vercel": "bun build ./src/index.ts --outdir ./dist --target bun --minify --sourcemap",
    "dev": "bun run --watch src/server.ts",
    "start": "bun run dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "eslint": "^9.36.0",
    "@template/eslint-config": "*",
    "@template/typescript-config": "*"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "@template/backend-common": "*",
    "@template/auth": "*",
    "@template/trpc": "*"
  }
}
