{
  "name": "template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:vercel": "turbo run build:vercel",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "find . -name node_modules -o -name .next -o -name .turbo -o -name dist -type d -prune | xargs rm -rf",
    "check-types": "turbo run check-types",
    "dev:web": "turbo -F @template/web dev",
    "dev:server": "turbo -F @template/server dev",
    "dev:worker": "turbo -F @template/worker dev",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "db:generate": "turbo db:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,yml}\"",
    "db:migrate": "turbo db:migrate",
    "rename-scope": "bun toolings/scripts/rename-scope.ts",
    "rename-scope:dry": "bun toolings/scripts/rename-scope.ts --dry-run",
    "rename-scope:verbose": "bun toolings/scripts/rename-scope.ts --verbose",
    "preinstall": "npx only-allow bun",
    "postinstall": "bun db:generate"
  },
  "devDependencies": {
    "@template/eslint-config": "workspace:*",
    "@template/typescript-config": "workspace:*",
    "eslint": "^10.0.2",
    "prettier": "^3.8.1",
    "prettier-plugin-sort-imports": "^1.8.11",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.8.11",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*",
    "toolings/*",
    "tests/*"
  ]
}
